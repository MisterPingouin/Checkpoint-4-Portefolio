{% extends 'base.html.twig' %}

{% block title %}Presentation{% endblock %}
{% block stylesheets %}
    {{ parent()}}
    {{ encore_entry_link_tags('presentation') }}
{% endblock %}
{% block javascripts %}
    {{ parent()}}
    {{ encore_entry_script_tags('presentation') }}
{% endblock %}
{% block navbar %}
    {% include 'includes/navbarpres.html.twig' %}
{% endblock %}
{% block body %}
  <section class="font-titlefont">
  {% set isFirstArticle = true %}
    {% for presentation in presentations %}
    <article class="{{ loop.first ? 'current static' : '' }}">
        <div class="image-wrap">
            <img class="rounded shadow-sm" src="{{ asset('build/images/' ~ presentation.link) }}">
        </div>
        <div class="caption w-full h-full p-4 flex flex-col justify-center items-start relative"> 
            <div class="left-content flex flex-col justify-center items-start h-full max-w-[48%] content-wrapper w-full">
                    <h1 class="md:pl-3 md:pb-10 mb-2 font-bold text-left w-full text-4xl md:text-6xl text-accentcolor">{{ presentation.fonction }}</h1>
                    <p class="md:pl-3 mt-4 pt-4 w-full text-left">{{ presentation.description|raw|nl2br }}</p>
                {% if isFirstArticle %}
                    <div class='scrolldown mt-[12em]'>
                        <div class="chevrons">
                            <div class='chevrondown'></div>
                            <div class='chevrondown'></div>
                        </div>
                    </div>
                    {% set isFirstArticle = false %}
                {% endif %}
                <div class="absolute bottom-5 left-0 ml-[7%] w-[40%] h-0.5 bg-gray-300"></div>
            </div>
        </div>
    </article>
    {% endfor %}
  </section>
{% endblock %}
