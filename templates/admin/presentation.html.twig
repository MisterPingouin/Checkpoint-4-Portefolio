{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - Presentations{% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        <h1 class="text-3xl my-6">Admin Dashboard - Presentations</h1>

        <div class="flex justify-end my-4">
<a href="{{ path('app_presentation_new', {'projectId': projectId}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Add New Presentation</a>
                        <a href="{{ path('app_admin') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 ml-3 rounded">Back to project</a>
        </div>

        {% for presentation in presentations %}
            <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-4">
                <div class="px-4 py-5 sm:px-6">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">{{ presentation.fonction }}</h3>
                </div>
                <div class="px-4 py-5 border-t border-gray-200 sm:p-0">
                    <dl class="sm:divide-y sm:divide-gray-200">
                        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Description</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ presentation.description }}</dd>
                        </div>

                        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Actions</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                                <a href="{{ path('app_presentation_edit', {id: presentation.id}) }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2">Edit</a>
                                <a href="{{ path('app_presentation_delete', {id: presentation.id}) }}" class="bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Delete</a>
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
